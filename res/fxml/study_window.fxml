            <Button fx:id="btnGood" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#actionGood" text="Good" textFill="#008600" visible="false" />
            <Button fx:id="btnEasy" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#actionEasy" text="Easy" textFill="BLUE" visible="false" />
         </children>
         <BorderPane.margin>
            <Insets bottom="16.0" left="16.0" right="16.0" top="8.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
