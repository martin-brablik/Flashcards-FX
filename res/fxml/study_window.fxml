<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.inf.upol.jj2.martinbrablik.flashcardsfx.controllers.StudyController">
   <top>
      <Label fx:id="lbName" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Deck Name" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="8.0" left="16.0" right="16.0" top="16.0" />
         </BorderPane.margin>
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
         </BorderPane.margin>
         <children>
            <Label fx:id="lbFront" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Front">
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="lbBack" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="">
